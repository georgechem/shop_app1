{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/main/login.css') }}">
{#  Components styles #}


{% endblock %}

{% block body %}
<form method="post" class="form">
    {% if error %}
        <div class="flash__danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <label class="form__label" for="inputEmail">Email:</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="off" class="form__input" required autofocus>
    <label class="form__label" for="inputPassword">Password</label>
    <input  type="password" name="password" id="inputPassword" autocomplete="off" class="form__input" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="form__button" type="submit">
        Sign in
    </button>
</form>
{% endblock %}

{%  block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/main/login.js') }}"></script>


{% endblock %}
