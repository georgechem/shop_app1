{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#  Components styles #}
    <link rel="stylesheet" href="{{ asset('css/components/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components/product_id.css') }}">
{% endblock %}

{% block body %}
    {# Top Bar component #}
    {% embed 'components/nav/top_bar.html.twig' %}
    {% endembed %}

    {% if app.user is empty%}
        {# If user not logged in panel #}
        {% embed 'components/nav/panel_user_anon.html.twig' %}
        {% endembed %}
    {% endif %}

    {% if app.user is not empty%}
        {# if user is logged #}
        {% embed 'components/nav/panel_user_logged.html.twig' %}
        {% endembed %}
    {% endif %}

    {# panel books #}
    {% embed 'components/nav/panel_books.html.twig' %}
    {% endembed %}

    {# product component #}
    {% embed 'components/product/product_component.html.twig' %}
    {% endembed %}







{% endblock %}
{%  block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/components/nav.js') }}"></script>

{% endblock %}
