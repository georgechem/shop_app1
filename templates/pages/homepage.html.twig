{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/homepage.css') }}">
    {#  Components styles #}
    <link rel="stylesheet" href="{{ asset('css/components/nav.css') }}">
{% endblock %}

{% block body %}
    {# Top Bar component #}
    {% embed 'components/top_bar.html.twig' %}
    {% endembed %}

    {% if app.user is empty%}
    {# If user not logged in panel #}
    {% embed 'components/panel_user_anon.html.twig' %}
    {% endembed %}
    {% endif %}

    {% if app.user is not empty%}
    {# if user is logged #}
    {% embed 'components/panel_user_logged.html.twig' %}
    {% endembed %}
    {% endif %}

    {# panel books #}
    {% embed 'components/panel_books.html.twig' %}
    {% endembed %}


{% endblock %}
{%  block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/homepage.js') }}"></script>
{% endblock %}
