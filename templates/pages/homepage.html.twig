{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/homepage.css') }}">
    {#  Components styles #}
    <link rel="stylesheet" href="{{ asset('css/components/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components/latest.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components/categories.css') }}">
{% endblock %}

{% block body %}
    {# Top Bar component #}
    {% embed 'components/nav/top_bar.html.twig' %}
    {% endembed %}

    {% if app.user is empty%}
    {# If user not logged in panel #}
    {% embed 'components/nav/panel_user_anon.html.twig' %}
    {% endembed %}
    {% endif %}

    {% if app.user is not empty%}
    {# if user is logged #}
    {% embed 'components/nav/panel_user_logged.html.twig' %}
    {% endembed %}
    {% endif %}

    {# panel books #}
    {% embed 'components/nav/panel_books.html.twig' %}
    {% endembed %}

    {# panel books #}
    {% embed 'components/latest/latest.html.twig' %}
    {% endembed %}

    {# panel categories #}
    {% embed 'components/categories/categories.html.twig' %}
    {% endembed %}



{% endblock %}
{%  block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/components/nav.js') }}"></script>
    <script src="{{ asset('js/pages/homepage.js') }}"></script>
    <script src="{{ asset('js/components/categories.js') }}"></script>
{% endblock %}
